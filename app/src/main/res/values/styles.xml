<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 对话框淡入淡出动画 -->
    <style name="anim_window_fade">
        <item name="android:windowEnterAnimation">@anim/window_in</item>
        <item name="android:windowExitAnimation">@anim/window_out</item>
    </style>
    <!-- 对话框底部进出动画 -->
    <style name="anim_slide_bottom">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>
    <!-- 对话框顶部进出动画 -->
    <style name="anim_slide_top">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_top</item>
    </style>

    <style name="btn_orange">
        <item name="android:background">@drawable/btn_orange_rect</item>
        <item name="android:textColor">#824828</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="btn_blue">
        <item name="android:background">@drawable/btn_blue_rect</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="btn_blue_border">
        <item name="android:background">@drawable/border_blue</item>
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="btn_translucent">
        <item name="android:background">@drawable/rect_black_translucent</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="tab_label">
        <item name="android:background">@drawable/rect_brown</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#824828</item>
    </style>
</resources>
