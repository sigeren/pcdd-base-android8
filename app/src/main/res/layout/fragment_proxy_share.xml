<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_margin="15dp"
        android:background="#fff">

        <ImageView
            android:id="@+id/ivQrCode"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/btnSaveQrCode"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@drawable/wode_xiazai"/>
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvShareUrl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/text_black"/>
        
        <View
            android:layout_width="1px"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/tvCopyUrl"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="@color/text_blue"
            android:text="复制"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="12sp"
        android:textColor="@color/text_gray"
        android:text="*通过以上链接或扫码二维码注册的用户即为您的下线;"/>

    <TextView
        android:id="@+id/tvShareId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textSize="12sp"
        android:textColor="@color/text_gray"
        android:text="@string/label_share_id"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textSize="12sp"
        android:textColor="@color/text_gray"
        android:text="用户注册时填写此介绍人ID，即可成为您的下线。"/>
</LinearLayout>